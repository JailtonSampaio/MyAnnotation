
<div class="container">
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info" >
                    <div class="panel-heading">
                      <div style="float:right; font-size: 80%; position: relative; top:-10px"><img src="/logo.png"><%= render 'devise/shared/links' %></div>
                        <div class="panel-title">Entrando no Sistema </div>

                    </div>

                    <div style="padding-top:30px" class="panel-body" >

                        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' }) do |f| %>

                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>

                                        <%= f.email_field :email, autocomplete: 'off', autofocus: true, class: 'form-control', placeholder: 'e-mail cadastrado'%>
                                    </div>

                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i></span>

                                        <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Senha' %>
                                    </div>

                            <% if devise_mapping.rememberable? %>
                            <div class="input-group">
                                      <div class="checkbox">
                                        <%= f.label :remember_me do %>
                                          <%= f.check_box :remember_me %> <%= t('.remember_me', default: 'Lembrar me') %>
                                        <% end %>
                                      </div>
                                    </div>
                                    <% end %>
                                    <div style="margin-top:10px" class="form-group">
                                        <!-- Button -->
                                    <div class="col-sm-12 controls">
                                    <%= f.submit  t('.sign_in', default: 'Entrar'), class: 'btn btn-success' %>
                                    <% end %>

                                    </div>
                                </div>


                                <div class="form-group">
                                    <div class="col-md-12 control">


                                          <%  flash.each do |name, msg| %>
                                      <div id="signupalert" class="alert alert-danger">


                                            <% if msg.class == Array %>
                                              <% msg.each do |message| %>
                                                <%= content_tag :div, message, :id => "flash_#{name}" %>
                                              <% end %>
                                            <% else %>


                                              <%= content_tag :div, msg, :id => "flash_#{name}"%>

                                            <% end  %>
                                            <span></span>
                                        </div>
                                            <% end %>

                                        </a>
                                        </div>
                                    </div>
                                </div>
                            </form>



                        </div>
                    </div>
        </div>
